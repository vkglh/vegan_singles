

<section class="section fullheight dark padding-v-100" data-header-change="true" style='background-color:#183159'>
        
        <div class="section-content v-center">
            <div class="border-bottom margin-b-80">
                <div class="container container-wide">
                    <h1 class="text-center"><i class="fa fa-search" style='margin-right: 10px;'> </i>Results</h1>
                </div>
            </div> 

                        <div class="container">

                      <div class= 'row'>
                        <div class="col-md-3">
                        </div>
                        <div class="col-md-6">
                            <center>
                                <h3>Your search returned <%= @results.size %> results.</h3>
                            </center>
                        </div>
                      </div>

                      <% @results.in_groups_of(4) do |result_1, result_2, result_3, result_4| %>
                          <div class="row">
                            <div class="col-md-3"><img src='<%= result_1.avatar.url %>'></div>
                            <div class="col-md-3"><img src='<%= result_2.avatar.url %>'></div>
                            <div class="col-md-3"><img src='<%= result_3.avatar.url %>'></div>
                            <div class="col-md-3"><img src='<%= result_4.avatar.url %>'></div>
                          </div>
                    <% end %>



                      </div>





            </div>


        </div>

</section>


