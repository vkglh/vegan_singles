<section class="section fullheight dark padding-v-100" data-header-change="true" style='background-color:#183159'>
        
        <div class="section-content v-center">
            <div class="border-bottom margin-b-80">
                <div class="container container-wide">
                    <h1 class="text-center"><i class="fa fa-search" style='margin-right: 10px;'> </i></a>Search</h1>
                </div>
            </div> 

                        <div class="container">

                    <%= form_tag({controller: "search", action: "results"}, method: "post") do %>

                      <div class= 'row'>
                        <div class="form-group col-md-3">
                        </div>
                        <div class="form-group col-md-6">
                          <center>
                          <p>You are currently looking for: <b><%= show_looking_for %></b> <br><a href='/profile/edit' class='text-muted'>Edit Profile</a></p> 
                        </center>
                        <%= hidden_field_tag(:searcher_gender, current_user.gender) %>
                        <%= hidden_field_tag(:looking_for_male, current_user.looking_for_male) %>
                        <%= hidden_field_tag(:looking_for_female, current_user.looking_for_female) %>
                        <%= hidden_field_tag(:looking_for_genderfluid, current_user.looking_for_genderfluid) %>
                        <%= hidden_field_tag(:looking_for_nonbinary, current_user.looking_for_nonbinary) %>
                          <label>Age Range</label><br />
                          <label>Distance</label><br />
                        </div>
                      </div>


                      <center>
                        <%= submit_tag "Search", class: 'btn btn-mint-green btn-filled btn-lg margin-t-20'%>
                      </center>

                    <% end %>

            </div>


        </div>

</section>


