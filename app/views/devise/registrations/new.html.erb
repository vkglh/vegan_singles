<section class="section fullheight bg-blue-navy dark padding-v-100" data-header-change="true">
        
        <div class="section-content v-center">
            <div class="border-bottom margin-b-80">
                <div class="container container-wide">
                    <h1 class="text-center"><i class="fa fa-keyboard-o" style='margin-right: 10px;'> </i></a> Register</h1>
                </div>
            </div>
            
            <div class="container">

                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <div class='row'>
                      <div class="form-group col-md-4">
                      </div>
                      <div class="form-group col-md-4">
                      <%= devise_error_messages! %>
                    </div>
                    </div>

                      <div class= 'row'>
                        <div class='col-md-4'>
                        </div>
                        <div class="form-group col-md-4">
                          <%= f.label :email %><br />
                          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
                        </div>
                      </div>

                      <div class= 'row'>
                        <div class='col-md-4'>
                        </div>
                        <div class="form-group col-md-4">
                          <%= f.label :password %>
                          <% if @validatable %>
                          <em>(<%= @minimum_password_length %> characters minimum)</em>
                          <% end %><br />
                          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
                        </div>
                      </div>

                      <div class= 'row'>
                        <div class="form-group">
                          <div class='col-md-4'>
                          </div>
                          <div class="form-group col-md-4">
                            <%= f.label :password_confirmation %><br />
                            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
                          </div>
                        </div>
                      </div>

                      <center>
                        <%= f.submit "Continue", class: 'btn btn-mint-green btn-filled btn-lg margin-t-20'%>
                      </center>

                    <% end %>

            </div>
        </div>

</section>


