

<section class="section fullheight bg-blue-navy dark padding-v-100" data-header-change="true">
        <style>
        .checkbox-inline, .checkbox {
  line-height: 1.9;
}
        </style>
        <div class="section-content v-center">
            <div class="border-bottom margin-b-80">
                <div class="container container-wide">
                    <h1 class="text-center"><i class="fa fa-edit" style='margin-right: 10px;'> </i></a> Edit Profile</h1>
                </div>
            </div>
            
            <div class="container">

                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                    <div class='row'>
                      <div class="form-group col-md-4">
                      </div>
                      <div class="form-group col-md-4">
                      <%= devise_error_messages! %>
                    </div>
                    </div>

                    <center>
                    <h3>Basic Info</h3>
                    </center>

                    <div class='row'>
                      <div class="form-group col-md-4">
                      </div>
                      <div class="form-group col-md-4">
                        <%= f.label :name %><br />
                        <%= f.text_field :name, class: 'form-control' %>
                      </div>
                    </div>

                    <div class='row'>
                      <div class="form-group col-md-4">
                      </div>
                      <div class="form-group col-md-4">
                        <%= f.label :city %><br />
                        <%= f.text_field :city, class: 'form-control awesomplete', id: 'city_input', style: 'width: 220px;' %>
                      </div>
                    </div>

                    <div class='row'>
                      <div class="form-group col-md-4">
                      </div>
                      <div class="form-group col-md-4">
                        <%= f.label :date_of_birth %><br />
                        <%= f.date_field :date_of_birth, class: 'form-control' %>
                      </div>
                    </div>

                    <div class='row'>
                      <div class="form-group col-md-4">
                      </div>
                      <div class="col-md-4">
                        <%= f.label 'Gender' %>
                      </div>
                    </div>

                    <div class='row margin-b-20'>
                      <div class="form-group col-md-4">
                      </div>
                      <div class="col-md-4">
                        <label class='radio-inline'><%= f.radio_button :gender, "Male"%>Male</label>
                        <label class='radio-inline'><%= f.radio_button :gender, "Female"%>Female</label>
                        <label class='radio-inline'><%= f.radio_button :gender, "Bigender"%>Bigender</label>
                        <label class='radio-inline'><%= f.radio_button :gender, "Agender"%>Agender</label>
                      </div>
                    </div>

                    <div class='row'>
                      <div class="form-group col-md-4">
                      </div>
                      <div class="col-md-4">
                        <%= f.label 'Looking For' %>
                      </div>
                    </div>

                    <div class='row margin-b-20'>
                      <div class="form-group col-md-4">
                      </div>
                      <div class="col-md-4">
                        <label class='checkbox-inline'><%= f.check_box :looking_for_male, style: 'margin-top: 6px;' %>Male</label>
                        <label class='checkbox-inline'><%= f.check_box :looking_for_female, style: 'margin-top: 6px;' %>Female</label>
                        <label class='checkbox-inline'><%= f.check_box :looking_for_bigender, style: 'margin-top: 6px;' %>Bigender</label>
                        <label class='checkbox-inline'><%= f.check_box :looking_for_agender, style: 'margin-top: 6px;' %>Agender</label>
                      </div>
                    </div>

                    <div class='row'>
                      <div class="form-group col-md-4">
                      </div>
                      <div class="form-group col-md-4">
                        <%= f.label 'Bio (Tell us about yourself here)' %><br />
                        <%= f.text_area :bio, class: 'form-control', :maxlength => 5000, :rows => 7 %>
                      </div>
                    </div>

                    <div class='row'>
                      <div class="form-group col-md-4">
                      </div>
                      <div class="form-group col-md-4">
                        <hr>
                      </div>
                    </div>

                    <center>
                    <h3>Gallery</h3>
                    </center>

                    <div class='row'>
                      <div class="form-group col-md-4">
                      </div>
                      <div class="form-group col-md-4">
                        <hr>
                      </div>
                    </div>

                    <center>
                    <h3>Interests</h3>
                    </center>

                    <div class='row'>
                      <div class="form-group col-md-4">
                      </div>
                      <div class="form-group col-md-4">
                        <hr>
                      </div>
                    </div>

                    <center>
                    <h3>Contact</h3>
                    </center>

                    <div class='row'>
                      <div class="form-group col-md-4">
                      </div>
                      <div class="form-group col-md-4">
                        <%= f.label 'Facebook Link' %><br />
                        <%= f.text_field :facebook, class: 'form-control' %>
                        </div>
                    </div>

                    <div class='row'>
                      <div class="form-group col-md-4">
                      </div>
                      <div class="form-group col-md-4">
                        <%= f.label 'skype id' %><br />
                        <%= f.text_field :skype, class: 'form-control' %>
                        </div>
                    </div>

                    <div class='row'>
                      <div class="form-group col-md-4">
                      </div>
                      <div class="form-group col-md-4">
                        <%= f.label 'Instagram ID' %><br />
                        <%= f.text_field :instagram, class: 'form-control' %>
                        </div>
                    </div>

                    <div class='row'>
                      <div class="form-group col-md-4">
                      </div>
                      <div class="form-group col-md-4">
                        <%= f.label 'twitter link' %><br />
                        <%= f.text_field :twitter, class: 'form-control' %>
                        </div>
                    </div>

                    <center>
                      <%= f.submit "Update", class: 'btn btn-mint-green btn-filled btn-lg margin-t-20'%>
                    </center>

                  <% end %>

            </div>
        </div>

</section>

<!-- Awesomplete -->
<script src='/assets/js/awesomplete.js'></script>
<%= city_names %>



