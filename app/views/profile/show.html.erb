<style>
  .dropdown-menu>li>a:hover {
    background-color: #ca4441;
  }

#myModalLabel {
    color: #333;
    text-align: center;
  }

  .modal-body p {
    color: #333;
    text-align: center;
  }

  .modal-body textarea {
    color: #333;
     display: block;
    margin-left: auto;
    margin-right: auto;
    width: 250px;
    height: 100px;
    padding: 5px;
  }
</style>

<!-- Section - Summary -->
    <section id="section01" class="section fullheight bg-blue dark padding-v-100" data-header-change="true" style="background-color:#282463">

        <div class="container container-wide v-center">
            <div class="row">
                <center>
                <div class="col-lg-12 col-md-10">
                    <img class="margin-b-20" src="<%= avatar_large %>" alt="" height='300' width='300' style='border: 3px rgba(0, 0, 0, 0.2) solid;'/>
                    <%= show_send_message %>
                    <% if current_user.id != @user.id %>
                        <div class="dropdown" style='display: inline-block; margin-bottom: 20px; margin-left: 5px;'>
                          <div class="dropdown-toggle" type="button" data-toggle="dropdown">
                          <span class="caret"></span></div>
                          <ul class="dropdown-menu" style='position: absolute; left: 50%; width: 100px; margin-left: -50px;'>
                            <li><a href="#" data-toggle="modal" data-target="#report_modal">Report User</a></li>
                            <li><a href="#">Block</a></li>
                          </ul>
                        </div>
                        <div id="report_modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                             <div class="modal-dialog">
                                <div class="modal-content">
                                  <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;  </button>
                                    <h4 class="modal-title" id="myModalLabel">Report User: <%= @user.name %></h4>
                                  </div>
                                  <%= form_tag({controller: "reports", action: "new"}, method: "post") do %>
                                      <div class="modal-body">
                                        <p>Reason for report:</p>
                                        <%= hidden_field_tag(:reported_message, "<a href='/profile/#{@user.id}'>View Profile</a>") %>
                                        <%= text_area_tag :reason, nil, maxlength: 500 %>
                                        </div>
                                      <div class="modal-footer">
                                         <button class="btn btn-red btn-filled btn-sm" type="submit" name="submit" value="submit">Send Report</button>
                                      </div>
                                  <% end %>
                                </div>
                              </div>
                            </div>
                    <% end %>
                    <%= show_edit_profile %>
                    <h1 class="margin-b-10"><%= show_name %></h1>
                    <h3><%= show_location %></h3>
                    <h3><%= show_age %></h3>
                    <h3><%= show_gender %></h3>
                    <h3><i class="fa fa-search" style="width: 35px;"></i> Looking for: <%= show_looking_for %></h3>
                </div>
                </center>
            </div>
        </div>
        
    </section>
    <!-- Section - Summary-->

    <!-- Section - Gallery -->
    <section id="section02" class="section dark" data-header-change="true" style='background-color: #282463;'>

        <div class="masonry-grid no-padding">
            <!-- Masonry Sizer -->
            <div class="masonry-sizer"></div>
            <!-- Masonry Element -->
            <div class='masonry-item'>
                <div class='gallery-item'>
                    <div class='item-photo'><a href=<%= gallery_img_1_url_large %> data-toggle="lightbox"><img src=<%= gallery_img_1_url_large %> alt='' /></a></div>
                    </a>
                </div>
            </div>
            <!-- Masonry Element -->
            <div class='masonry-item'>
                <div class='gallery-item'>
                    <div class='item-photo'><a href=<%= gallery_img_2_url_large %> data-toggle="lightbox"><img src=<%= gallery_img_2_url_large %> alt='' /></a></div>
                    </a>
                </div>
            </div>
            <!-- Masonry Element -->
            <div class='masonry-item'>
                <div class='gallery-item'>
                    <div class='item-photo'><a href=<%= gallery_img_3_url_large %> data-toggle="lightbox"><img src=<%= gallery_img_3_url_large %> alt='' /></a></div>
                    </a>
                </div>
            </div>
            <!-- Masonry Element -->
            <div class='masonry-item'>
                <div class='gallery-item'>
                    <div class='item-photo'><a href=<%= gallery_img_4_url_large %> data-toggle="lightbox"><img src=<%= gallery_img_4_url_large %> alt='' /></a></div>
                    </a>
                </div>
            </div>
        </div>

    </section>
    <!-- Section - Gallery -->

    <!-- Section - Interests -->
    <section id="section03" class="section fullheight dark padding-v-100" data-header-change="true" style="background-color:#17665C;">
        
        <div class="section-content container container-wide v-center">
            <div class="row">
                <div class="col-lg-6 col-md-10">
                    <h1><strong>My Interests</strong></h1>
                </div>
            </div>
        </div>

    </section>
    <!-- Section - Interests -->

    <!-- Section - About -->
    <section id="section04" class="section fullheight dark padding-v-100" data-header-change="true" style="background-color:#183159">

        <div class="container container-wide v-center">
            <div class="row">
                <div class="col-lg-6 col-md-10">
                    <h1 class="margin-b-50"><strong>About Me</strong></h1>
                    <p class='lead'><%= h(show_bio).gsub(/\n/, '<br/>').html_safe %></p>
            </div>
        </div>
        
    </section>
    <!-- Section - About-->

    <!-- Section - Contact -->
    <section id="section05" class="section fullheight dark padding-v-100" data-header-change="true" style="background-color:#1A5B71">
        
        <div class="section-content container container-wide v-center">
            <div class="row">
                <div class="col-lg-6 col-md-10">
                    <h1 class="margin-b-60"><strong>Get in touch</strong> with <strong><%= show_contact_name %></strong>! </h1>
                        <%= show_contact_info %>
                        <!--
                    -->
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- Section - Contact / End -->
    
</div>
<!-- Page Wrapper / End -->